{
  "compilerOptions": {
    "types": ["node", "cypress", "cypress-real-events", "cypress-xpath"],
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./build",
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@services/*": ["src/services/*"]
    }
  },
  "include": ["src/**/*", "cypress/**/*"],
  "exclude": ["node_modules", "tests/e2e"]
}
